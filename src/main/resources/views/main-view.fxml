<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<GridPane fx:controller="com.iskernel.fonttoimage.controllers.MainController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="TOP_CENTER"
          hgap="10"
          vgap="10"
          stylesheets="/css/main.css">
    <Text text="Welcome to Font to Image"
          styleClass="welcome-text"
          GridPane.columnIndex="1"
          GridPane.rowIndex="0"
          GridPane.rowSpan="1"
          GridPane.columnSpan="2"/>
    <Button text="Extract icon"
            styleClass="main-button"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"/>
    <Button text="Extract all icons"
            styleClass="main-button"
            GridPane.columnIndex="1"
            GridPane.rowIndex="2"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"/>
    <Button text="Extract with csv"
            styleClass="main-button"
            GridPane.columnIndex="1"
            GridPane.rowIndex="3"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"/>
    <Button text="About"
            styleClass="main-button"
            GridPane.columnIndex="1"
            GridPane.rowIndex="4"
            GridPane.rowSpan="1"
            GridPane.columnSpan="2"/>
    <Text text="Created by Bogdan Taranu (bogdan@iskernel.com)"
          styleClass="details-text"
          GridPane.columnIndex="1"
          GridPane.rowIndex="5"
          GridPane.rowSpan="1"
          GridPane.columnSpan="2"/>
</GridPane>